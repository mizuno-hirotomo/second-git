<% if logged_in? %>

<h1>タスクリスト</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.id %> : <%= task.status %> &gt; <%= task.content %></li>
  <% end %>
</ul>
<%= paginate @tasks %>

<%= link_to '新規タスクの登録', new_task_path %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
    <h1>Welcome to Task List</h1>
    <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>

<% end %>